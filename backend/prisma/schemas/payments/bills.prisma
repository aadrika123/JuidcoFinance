model bills {
id                  Int               @id @default(autoincrement())

ulb_id              Int
ulb                 municipality_codes     @relation(fields: [ulb_id], references: [id])

bill_no             String
bill_date           DateTime @db.Date

party_id          Int
party        vendor_masters @relation(fields: [party_id], references: [id])

particulars         String
amount              Float

authorizing_officer_name String?

sanction_date       DateTime  @db.Date
voucher_no          String?
reason_for_delay    String?
outstanding_balance Float
discount_allowed    String?
sanctioned_amount    Float

remarks             String

bill_checkings      bill_checkings[]

created_at       DateTime          @default(now()) @map("created_at")
updated_at       DateTime          @default(now()) @updatedAt @map("updated_at")
}
